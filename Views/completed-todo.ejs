<%- include('includes/head.ejs') %>

<body>
    <%- include('includes/navigation.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">
    <main>
      <hr>
         <% if (items.length > 0) { %>
           <div class="grid">
             <% for (let task of items) { %>
            
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title">
                            Task: <%= task.title %></h1>
                    </header>
                    <div class="card__status">
                         <h1 class="product__status">
                            Task status: <%= task.status %></h1>
                    </div>
                    <div class="card__prior">
                          <h1 class="product__priority">
                            Priority: <%= task.priority %></h1>
                    </div>
                    <div class="card__due">
                         <h1 class="product__due">
                            Due time: <%= task.duetime %>
                         </h1>
            
                         <p class="card__description">
                        Task description: <%= task.description %></p>
                    </div>
                    <div class="card__actions">
                        <form action="/delete-todo" method="POST">
                            <input type="hidden" value="<%= completedTask.id %>" name="completedTask" id="todoId">
                            <button class="btn" type="submit">Delete Todo</button>
        
                        </form>
                    </div>
                    </header>
                    </article>
            <% } %>
        </div>
        <% } else { %>
        <h1>No Tasks Found!</h1>
        <% } %>
    </main>
   <%- include('includes/end.ejs') %>

